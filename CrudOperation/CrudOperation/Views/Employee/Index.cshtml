@model List<CrudOperation.Models.Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Employee list</h1>
<table>
    <thead>
        <tr>
        <th>
            Id
        </th>
        <th>Name</th>
        <th>Salary</th>
        <th>Department</th>
        <th>Email</th>
        <th>Date Of Birth</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
            <td>@employee.Name</td>
            <td>@employee.Salary</td>
            <td>@employee.Department</td>
            <td>@employee.Email</td>
            <td>@employee.DateOfBirth.ToString("dd-mm-yyyy")</td>
            <td><a href="Employee/View/@employee.Id">View</a></td>
        </tr>
        }
    </tbody>



</table>

